#!/bin/bash

if [[ -z "${POSHC2_DIR}" ]]; then
    POSH_DIR="/opt/PoshC2"
else
    POSH_DIR="${POSHC2_DIR}" 
fi

POSH_PROJECT_DIR=`cat $POSH_DIR/Config.py | grep "ROOTDIR = " | cut -d "\"" -f 2`

if [[ ! -d "$POSH_PROJECT_DIR" ]]; then
    mkdir -p "$POSH_PROJECT_DIR"
fi

sudo docker run -ti --rm -v "$POSH_PROJECT_DIR:$POSH_PROJECT_DIR" -v "$POSHC2_DIR:/opt/PoshC2" nettitude/poshc2 /usr/bin/posh "$@"
